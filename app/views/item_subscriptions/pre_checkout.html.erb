<div class="pre-checkout">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h3>Benefits summary - <%= display_full_next_month %></h3>
      </div>
    </div>
    <% @cart_elements.each do |cart_element| %>
      <%= render partial: 'shared/pre_checkout_element', locals: {element: cart_element}%>
    <% end %>
    <div class="row" style="padding-top:30px;">
      <div class="col-md-8">
        <p>Your preferences will be saved for the next months. You can always change them from your personal dashboard</p>
      </div>
    </div>
    <div style="row">
      <div class="col-md-1">
        <%= link_to 'Confirm', create_subscriptions_item_subscriptions_path, class: "btn btn-success" %>
      </div>
      <div class="col-md-1">
        <%= link_to 'Back', root_path, class: "btn btn-warning" %>
      </div>
    </div>
  </div>
</div>
