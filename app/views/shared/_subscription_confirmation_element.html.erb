<div class="row" style="padding: 20px;">
  <div class="col-md-1">
    <%= image_tag element.item.image, width: 80 %>
    <p style="text-align:center; padding: 5px 0; width: 80px;" ><%= element.amount %>$</p>
  </div>
  <% if element.service_email.present? %>
    <div class="col-md-11" style="padding-top: 10px;">
      <p><h4>Nice!</h4></p>
      <p><h5>Your credit will be updated at the beginning of the next month.</h5></p>
    </div>
  <% else %>
    <div class="col-md-11">
      <div class="row">
        <div class="col-md-11"><p><h4>Oops, we haven't set up this account yet!</h4></p></div>
      </div>
      <div class="row">
        <div class="col-md-5">
          <p>What's your email you signed up for this service? </p>
          <%= form_for element, method: :patch, remote: true do |f| %>
            <%= f.text_field :service_email, type: :email, required: true %>
            <%= f.submit :submit %>
          <% end %>
        </div>
        <div class="col-md-1">or</div>
        <div class="col-md-6">
          <p>If you don't have an account for this service yet do it here:</p>
          <%= link_to 'Signup with our custom URL', element.item.custom_signup_url, target: "_blank", class: "" %>
        </div>
      </div>
    </div>
  <% end %>
</div>